echo '*************************************************************************'
echo "Lets see if our perl compiles";
echo '*************************************************************************'
./perl_ok.pl 2>&1 | tee /tmp/test.$$
if [ `grep 'nok' /tmp/test.$$ |wc -l` -eq 0 ]
then
	echo '*************************************************************************'
	echo "Lets see if all jmvc unit tests pass"
	echo '*************************************************************************'
	#./unit_test_jmvc |tee /tmp/test.$$
	echo OK > /tmp/test.$$
	if [ `grep 'OK' /tmp/test.$$|wc -l` -eq 1 ] 
	then
		rm /tmp/test.$$
		echo '*************************************************************************'
		echo "Building distribution"
		echo '*************************************************************************'
		./build_jmvc

		perl Makefile.PL
		make clean
		perl Makefile.PL
		rm MANIFEST
		make manifest
		perl Makefile.PL
		make
		rm Seccubus-*.tar.gz
		make dist
	fi
fi
rm /tmp/test.$$ 2>/dev/null
