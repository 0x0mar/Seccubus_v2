# ------------------------------------------------------------------------------

source /home/seccubus/etc/config
export VAR
export CONFIG

$NESSUSBIN -c $CONFIG/full-nessusrc -qxp $HOST $PORT $USER $PASS > $VAR/.plugins/plugins.txt

/home/seccubus/bin/update-plugin-info.pl
