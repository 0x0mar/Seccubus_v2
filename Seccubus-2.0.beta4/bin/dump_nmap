#!/usr/bin/env perl
# ------------------------------------------------------------------------------
# $Id$
# ------------------------------------------------------------------------------
# This program loads an nmap XML  file with XML::Simple and dumps the data with
# Data::Dumper
# ------------------------------------------------------------------------------

use strict;
use XML::Simple;
use Data::Dumper;

print Dumper( 
	XMLin(
		(join "", <>),
		forceArray   => [ 'host', 'osclass', 'osmatch', 'port', 'extrareasons' ],
		KeyAttr	     => undef,
	) 
);
